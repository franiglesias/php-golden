{
  "name": "franiglesias/golden",
  "description": "A library for snapshot testing inPHP.",
  "authors": [
    {
      "name": "Fran Iglesias",
      "email": "thetalkingbit@gmail.com",
      "homepage": "https://franiglesias.github.io",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Golden\\": "src"
    },
    "files": [
      "src/Golden.php"
    ]
  },
  "config": {
    "bin-dir": "bin"
  },
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "11.*"
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Golden\\": "tests"
    }
  }
}
